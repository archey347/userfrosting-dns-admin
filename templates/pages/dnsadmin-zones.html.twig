{% extends 'pages/abstract/dashboard.html.twig' %}

{% block page_title %}DNS Zones{% endblock %}

{% block page_description %}Manage the DNS Zones{% endblock %}

{% block body_matter %}
  <div id="zones-table" class="box box-primary">
    <div class="box-header">
      <h3 class="box-title pull-left"><i class="fa fa-fw fa-globe"></i> Zones</h3>
      {% include "tables/table-tool-menu.html.twig" %}
    </div>
    <div class="box-body">
      {% include "tables/zones.html.twig" with {
          "table" : {
            "id" : "table-zones"
          }
        }
      %}
    </div>
    <div class="box-footer">
      <button type="button" class="btn btn-success" id="btn-create-zone">
        <i class="fa fa-plus-square"></i> Create Zone
      </button>
    </div>
  </div>
{% endblock %}
{% block scripts_page %}
  <script>
    {% include "pages/partials/page.js.twig" %}
  </script>

  {{ assets.js('js/pages/zones-admin') | raw }}
{% endblock %}
